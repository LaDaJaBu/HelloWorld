color c = color(0);
float xspeed = 0;
float yspeed = 1;
float x= 0;
float y= 100;

void setup() {
  size(200,200);
}

void draw() {
  background(255);
  move();
  display();
}

void move() {
  x = x + yspeed;
  if (x > width) {
    x = 0;
  }
   y = x + yspeed;
  if (y > width) {
    y = 0;
  }
  
 if (x>0){
   x = x + yspeed *2;
 }
}

void display() {
  fill(c);
  rect(x,y,30,10);
}
